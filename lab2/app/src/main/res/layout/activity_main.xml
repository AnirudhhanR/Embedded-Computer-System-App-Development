<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Purple Title Bar at the Top -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#6200EA"
        android:gravity="center"
        android:text="Jing Kai Chen Lab2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"/>

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the sensor you want to test"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Accelerometer Button -->
        <Button
            android:id="@+id/btnAccelerometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCELEROMETER"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Gyroscope Button -->
        <Button
            android:id="@+id/btnGyroscope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GYROSCOPE"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Proximity Button -->
        <Button
            android:id="@+id/btnProximity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROXIMITY"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</RelativeLayout>
